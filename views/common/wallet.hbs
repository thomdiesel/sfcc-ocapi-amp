<div class="hero slant-down account-image">
  <h1 class="page-title">Payment</h1>
</div>

<div class="{{containerClass}}">
  <div class="row hidden-xs-down">
    <div class="col">
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="{{homeUrl}}">
            Home
          </a>
        </li>
        <li class="breadcrumb-item">
          <a href="{{accountUrl}}">
            My Account
          </a>
        </li>
        <li class="breadcrumb-item">
          Payment
        </li>
      </ol>
    </div>
  </div>

  <!-- Rows for Credit Cards -->
  {{#each customer.payment_instruments}}
    <div class="row justify-content-center" id="uuid-{{payment_instrument_id}}">
      <div class="col-sm-8 col-md-6">
        {{#with payment_card}}
          <div class="card">
            <div class="card-header">
              <h4 class="pull-left">{{holder}}</h4>
              <a href="" class="pull-right">Edit</a>
            </div>
            <div class="card-block card-block-positioning">
              <div class="card-info-group">
                <p>Credit {{card_type}}</p>
                <p>{{masked_number}}</p>
                <p>Ending {{expiration_month}}/{{expiration_year}}</p>
              </div>
              <button type="button" class="remove-btn remove-payment" data-toggle="modal" data-target="#deletePaymentModal" data-id="3cb6379a48ad03e685afe7dbe7"
                data-card="************1111" data-url="">
                Ã—
              </button>
            </div>
          </div>
        {{/with}}
      </div>
    </div>
  {{/each}}

  <div class="row justify-content-center">
    <div class="col-6">
      <div class="row">
        <div class="col">
          <a href="{{accountUrl}}">
            <p class="text-center back-to-account-link">Back to My Account</p>
          </a>
        </div>
        <div class="col">
          <a href="" class="btn btn-save btn-block btn-primary">Add New</a>
        </div>
      </div>
    </div>
  </div>
</div>
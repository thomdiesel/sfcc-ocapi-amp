<div class="row product-grid">
  {{#each hits}}
    <div class="col-6 col-sm-4" data-pid="{{product_id}}">
      {{> search/productTile}}
    </div>
  {{/each}}

  {{#if next}}
    <div class="col-12 show-more">
      <div class="text-center">
        <button class="btn btn-outline-primary col-12 col-sm-4" data-url="{{next}}">
          More
        </button>
      </div>
    </div>
  {{/if}}
  <input type="hidden" class="max-comparison-slots" value="4.0">
  <input type="hidden" class="category-id" value="womens-clothing-dresses">
</div>

{{#if (gt values.length 1)}}
  <div class="card collapsable-sm refinement refinement-category">
    <div class="card-header">
      {{label}}
    </div>
    <div class="card-block">
      <ul class="values content">
        {{#each values}}
          <li>
            <a href="{{toggleRefinementValueUrl .. value}}">
              <i class="fa {{isRefinedByAttributeValue .. value 'fa-check-circle' 'fa-circle-o'}}"></i>
              <span title="Refine by {{../label}}: {{label}}" class="">
                  {{label}}
              </span>
            </a>
            {{#if values}}
              <ul class="values content">
                {{#each values}}
                  <li>
                    <a href="{{toggleRefinementValueUrl ../.. value}}">
                      <i class="fa {{isRefinedByAttributeValue ../.. value 'fa-check-circle' 'fa-circle-o'}}"></i>
                      <span title="Refine by {{../label}}: {{label}}">
                          {{label}}
                      </span>
                    </a>
                    {{#if values}}
                      <ul class="values content">
                        {{#each values}}
                          <li>
                            <a href="{{toggleRefinementValueUrl ../../.. value}}">
                              <i class="fa {{isRefinedByAttributeValue ../../.. value 'fa-check-circle' 'fa-circle-o'}}"></i>
                              <span title="{{isRefinedByAttributeValue ../../.. value 'Refined' 'Refine'}} by {{../label}}: {{label}}" class="{{isRefinedByAttributeValue ../../.. value 'selected'}}">
                                  {{label}}
                              </span>
                            </a>
                          </li>
                        {{/each}}
                      </ul>
                    {{/if}}
                  </li>
                {{/each}}
              </ul>
            {{/if}}
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
{{/if}}